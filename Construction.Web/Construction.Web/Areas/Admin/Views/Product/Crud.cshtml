
@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using Construction.Web.Common;
@model Construction.Web.Areas.Admin.Models.Product.ProductCrudViewModel
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@ViewBag.Title</h2>
