                    @Html.HiddenFor(p => p.Id)
                    <div class="row">
                        <div class="col-md-8 col-sm-8 col-xs-12 form-group">
                            <label>
                                Tên dự án <span class="required">*</span>
                            </label>
                            <input type="text" id="Name" name="Name" required="required" class="form-control col-md-7 col-xs-12" value="@Model.Name">

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                            <label>
                                Danh mục<span class="required">*</span>
                            </label>
                            @Html.DropDownListFor(m => m.CategoryId, Model.ListCategory, "- Chọn danh mục -", new { @class = "form-control col-md-7 col-xs-12", @required = "required" })
                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                            <label>
                                Dịch vụ<span class="required">*</span>
                            </label>
                            @Html.DropDownListFor(m => m.ServiceId, Model.ListService, "- Chọn dịch vụ -", new { @class = "form-control col-md-7 col-xs-12", @required = "required" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                            <label>
                                Mô tả <span class="required">*</span>
                            </label>
                            <textarea id="Description" name="Description" required="required">@WebUtility.HtmlDecode(Model.Description)</textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-12 form-group">
