@using Construction.Web.Models
@model Project_Detail_ViewModel
@{
    ViewBag.Title = Model.Item.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="span12">
            <div class="row">
                <div class="span12">
                    <section class="title-section">
                        <h1 class="title-header">
                            @Model.Item.Name
                        </h1>
                        @Html.Action("Breadcrumb", "Navigation")
                    </section>
                </div>
            </div>
            <div id="content" class="row">
                <div class="span12">
                    <!--BEGIN .hentry -->
                    <div class="portfolio type-portfolio status-publish hentry">

                        <div class="row">
                            <div class="span12">
                                @if (!string.IsNullOrEmpty(Model.Item.Link))
                                {
                                    <iframe style="width:100%; height:100%" src="@Model.Item.Link"></iframe>
                                }
                                @Html.Raw(WebUtility.HtmlDecode(Model.Item.Description))
                            </div>

                        </div>
                        <div class="row">
                            <div class="span12">
                                <div class="related-posts">
                                    <h3 class="related-posts_h">Những dự án khác</h3>
                                    @Html.Action("RelateItems", "FE_Project")
                                </div>
                                <a href="/du-an" title="view all projects" class="btn btn-default btn-normal btn-inline pull-right" target="_self">
                                    <i class="fa fa-hand-o-right" aria-hidden="true"></i> Xem thêm những dự án khác
                                </a>
                            </div>
                        </div>
                        @Html.Action("Questioner", "FE_Support")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
